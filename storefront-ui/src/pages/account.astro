---
// Define the page layout
import Layout from "../layouts/Layout.astro"
---

<astro:head>
  <title>Manage Account</title>
</astro:head>
<Layout>
    <main>
      <h1>Manage Account</h1>
      <div class="account-info">
        <h2>Account Information</h2>
        <p>Email: user@example.com</p>
        <p>Address: 123 Main St, City, Country</p>
        <p>Contact Info: (123) 456-7890</p>
      </div>

      <h2>Edit Account Information</h2>
      <form>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="user@example.com" required />

        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="123 Main St, City, Country" required />

        <label for="contact">Contact Info:</label>
        <input type="tel" id="contact" name="contact" value="(123) 456-7890" required />

        <button type="submit">Save Changes</button>
      </form>
    </main>
</Layout>
<style>
  /* Your custom styles for the ManageAccount page go here */
  main {
    padding: 20px;
    text-align: center;
  }

  h1 {
    margin-bottom: 30px;
  }

  .account-info {
    margin-bottom: 40px;
  }

  h2 {
    margin-bottom: 20px;
  }

  form {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 10px;
    max-width: 500px;
    margin: 0 auto;
  }

  label {
    font-weight: bold;
  }

  input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button {
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    padding: 12px 20px;
    cursor: pointer;
    width: 100%;
  }
</style>
